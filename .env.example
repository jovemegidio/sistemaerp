# ===================================================================
# ALUFORCE Dashboard - Configuração de Ambiente
# ===================================================================
# Copie este arquivo para .env e preencha com seus valores
# NUNCA faça commit do arquivo .env real
# ===================================================================

# AMBIENTE
NODE_ENV=production
PORT=3000
HOST=0.0.0.0

# BANCO DE DADOS - ⚠️ ALTERAR SENHA EM PRODUÇÃO
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=@dminalu
DB_NAME=aluforce_vendas
SERVER_PORT=3000
DB_CONN_LIMIT=20

# SEGURANÇA (⚠️ OBRIGATÓRIO GERAR NOVA CHAVE!)
JWT_SECRET=sua_chave_jwt_super_secreta_minimo_64_caracteres
# Gere uma nova com: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"

# EMAIL (SMTP - Opcional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# LOGS
LOG_LEVEL=info

# RATE LIMITING
LOGIN_RATE_LIMIT=5
API_RATE_LIMIT=100
DISABLE_RATE_LIMIT=false

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# UPLOADS
MAX_FILE_SIZE=10mb
UPLOAD_DIR=./uploads

# DESENVOLVIMENTO/TESTES
DEV_MOCK=0
RETURN_TOKEN=0
