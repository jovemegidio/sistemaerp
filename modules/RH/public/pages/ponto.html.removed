    <script>
        const avatarNameMap = { 'clemerson': '/avatars/Clemerson.webp', 'isabela': '/avatars/Isabela.webp', 'thaina': '/avatars/Thaina.webp', 'thiago': '/avatars/Thiago.webp', 'nicolas': '/avatars/NicolasDaniel.webp', 'rh': '/avatars/Rh.webp', 'admin': '/avatars/admin.webp', 'ti': '/avatars/TI.webp', 'antonio': '/avatars/Antonio.webp', 'andreia': '/avatars/Andreia.webp', 'guilherme': '/avatars/Guilherme.webp' };

        function getAvatarFromEmail(email, nome) {
            if (!email) return null;
            const username = email.split('@')[0].split('.')[0].toLowerCase();
            if (avatarNameMap[username]) return avatarNameMap[username];
            if (nome) { const firstName = nome.split(' ')[0].toLowerCase(); if (avatarNameMap[firstName]) return avatarNameMap[firstName]; }
            return null;
        }

        async function carregarUsuarioLogado() {
            try {
                const response = await fetch('/api/me', { credentials: 'include' });
                if (response.ok) {
                    const user = await response.json();
                    const userName = user.nome || user.apelido || 'Usuário';
                    let userAvatar = user.avatar && user.avatar !== '/avatars/default.webp' ? user.avatar : getAvatarFromEmail(user.email, userName);
                    const userNameEl = document.getElementById('user-name');
                    if (userNameEl) userNameEl.textContent = userName.split(' ')[0];
                    const userPhotoEl = document.getElementById('user-photo');
                    const userInitialEl = document.getElementById('user-initial');
                    if (userAvatar && userPhotoEl) { userPhotoEl.src = userAvatar; userPhotoEl.classList.add('visible'); userPhotoEl.style.display = 'block'; if (userInitialEl) userInitialEl.style.display = 'none'; }
                    else if (userInitialEl) { userInitialEl.textContent = userName.charAt(0).toUpperCase(); userInitialEl.style.display = 'flex'; if (userPhotoEl) userPhotoEl.style.display = 'none'; }
                }
            } catch (error) { console.error('Erro ao carregar usuário:', error); }
        }

        // Relógio em tempo real
        function atualizarRelogio() {
            const agora = new Date();
            const horas = String(agora.getHours()).padStart(2, '0');
            const minutos = String(agora.getMinutes()).padStart(2, '0');
            const segundos = String(agora.getSeconds()).padStart(2, '0');
            document.getElementById('relogio').textContent = `${horas}:${minutos}:${segundos}`;
        }

        function atualizarData() {
            const agora = new Date();
            const diasSemana = ['Domingo', 'Segunda-feira', 'Terça-feira', 'Quarta-feira', 'Quinta-feira', 'Sexta-feira', 'Sábado'];
            const meses = ['Janeiro', 'Fevereiro', 'Março', 'Abril', 'Maio', 'Junho', 'Julho', 'Agosto', 'Setembro', 'Outubro', 'Novembro', 'Dezembro'];
            const diaSemana = diasSemana[agora.getDay()];
            const dia = agora.getDate();
            const mes = meses[agora.getMonth()];
            const ano = agora.getFullYear();
            document.getElementById('data-atual').textContent = `${diaSemana}, ${dia} de ${mes} de ${ano}`;
        }

        let batidaAtual = 1;
        function baterPonto() {
            const agora = new Date();
            const hora = `${String(agora.getHours()).padStart(2, '0')}:${String(agora.getMinutes()).padStart(2, '0')}`;
            
            const batidaCards = ['batida-1', 'batida-2', 'batida-3', 'batida-4'];
            const horaIds = ['hora-entrada', 'hora-almoco-saida', 'hora-almoco-retorno', 'hora-saida'];
            const labels = ['Entrada', 'Saída Almoço', 'Retorno Almoço', 'Saída'];
            
            if (batidaAtual <= 4) {
                const card = document.getElementById(batidaCards[batidaAtual - 1]);
                card.classList.add('registrada');
                document.getElementById(horaIds[batidaAtual - 1]).textContent = hora;
                
                const statusEl = document.getElementById('status-ponto');
                if (batidaAtual === 1) {
                    statusEl.textContent = 'Trabalhando';
                    statusEl.className = 'status-ponto trabalhando';
                } else if (batidaAtual === 2) {
                    statusEl.textContent = 'Intervalo de Almoço';
                    statusEl.className = 'status-ponto intervalo';
                } else if (batidaAtual === 3) {
                    statusEl.textContent = 'Trabalhando';
                    statusEl.className = 'status-ponto trabalhando';
                } else {
                    statusEl.textContent = 'Expediente Encerrado';
                    statusEl.className = 'status-ponto';
                }
                
                alert(`✅ ${labels[batidaAtual - 1]} registrada às ${hora}`);
                batidaAtual++;
            }
            
            if (batidaAtual > 4) {
                document.querySelector('.btn-bater-ponto').disabled = true;
                document.querySelector('.btn-bater-ponto').innerHTML = '<i class="fas fa-check"></i> Ponto Completo';
            }
        }

        setInterval(atualizarRelogio, 1000);
        document.addEventListener('DOMContentLoaded', () => {
            carregarUsuarioLogado();
            atualizarRelogio();
            atualizarData();
        });
