{
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": ["standard"],
  "rules": {
    "no-console": "off",
    "prefer-const": "off"
  },
  "overrides": [
    {
      "files": ["public/**/*.js"],
      "env": { "browser": true, "node": false },
      "globals": {
        "localStorage": "readonly",
        "showToast": "readonly",
        "openModal": "readonly",
        "closeModal": "readonly",
        "fetch": "readonly",
        "FormData": "readonly"
      },
      "rules": {
        "no-undef": "off"
      }
    },
    {
      "files": ["scripts/**/*.js"],
      "env": { "node": true },
      "rules": {
        "promise/param-names": "off",
        "no-return-assign": "off",
        "camelcase": "off"
      }
    }
  ]
}
