{
  "name": "Sistema RH Aluforce",
  "version": "2.0.0",
  "description": "Módulo de Recursos Humanos atualizado com portais separados",
  "main_files": {
    "admin": "areaadm.html",
    "employee": "funcionario.html",
    "legacy_employee": "area.html"
  },
  "routes": {
    "/RH/areaadm.html": {
      "file": "areaadm.html",
      "auth_required": true,
      "permissions": ["rh", "admin"],
      "description": "Portal administrativo do RH"
    },
    "/RH/funcionario.html": {
      "file": "funcionario.html", 
      "auth_required": true,
      "permissions": ["employee", "funcionario"],
      "description": "Portal do funcionário (novo)"
    },
    "/RH/area.html": {
      "file": "area.html",
      "auth_required": true,
      "permissions": ["employee", "funcionario"], 
      "description": "Portal do funcionário (legado, mantido para compatibilidade)"
    }
  },
  "removed_files": [
    "areaadm_backup.html",
    "areaadm_old.html", 
    "test*.html",
    "debug*.html",
    "teste*.html",
    "automated-test.html",
    "diagnostic-dashboard.html",
    "preview.html",
    "quick-test.html",
    "*fix*.css",
    "*fix*.js",
    "*emergency*.css",
    "*emergency*.js",
    "*dashboard*.css",
    "*dashboard*.js",
    "*animations*.css",
    "*animations*.js",
    "*organized*.css",
    "*professional*.css"
  ],
  "redirects": {
    "/modules/RH/public/area.html": "/RH/funcionario.html",
    "/modules/RH/public/funcionario.html": "/RH/funcionario.html",
    "/modules/RH/public/areaadm.html": "/RH/areaadm.html",
    "/area.html": "/funcionario.html"
  },
  "features": {
    "admin_portal": {
      "dashboard": true,
      "employee_management": true,
      "payroll": true,
      "benefits": true,
      "documents": true,
      "reports": true
    },
    "employee_portal": {
      "personal_data": true,
      "payslips": true,
      "time_tracking": true,
      "vacation_requests": true,
      "benefits_view": true,
      "document_download": true
    }
  },
  "styling": {
    "framework": "Custom CSS Grid + Flexbox",
    "design_system": "Aluforce Blue Theme",
    "responsive": true,
    "accessibility": "WCAG 2.1 AA compliant",
    "animations": "CSS transitions + keyframes"
  },
  "last_updated": "2025-10-30",
  "changelog": {
    "2.0.0": [
      "Corrigido DIV desbalanceada no areaadm.html",
      "Eliminado IDs duplicados", 
      "Implementada função salvarFuncionario",
      "Criado portal funcionario.html seguindo mesmo padrão",
      "Atualizado area.html para novo padrão visual",
      "Removidos arquivos obsoletos e de teste",
      "Ajustados redirecionamentos no servidor",
      "Melhorada acessibilidade A11Y",
      "Otimizada performance e carregamento"
    ]
  }
}