# Configurações do Banco de Dados
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=@dminalu
DB_NAME=aluforce_vendas

# Configurações NFe
NFE_AMBIENTE=2
# 1 = Produção, 2 = Homologação

# Diretórios de armazenamento
NFE_XML_DIR=./storage/nfe/xmls
NFE_TEMP_DIR=./storage/nfe/temp
NFE_BACKUP_DIR=./storage/nfe/backups
NFE_DANFE_DIR=./storage/nfe/danfes
NFE_CERT_DIR=./storage/nfe/certificados

# Certificado Digital A1
CERT_PATH=./certificados/certificado.pfx
CERT_PASSWORD=senha_certificado

# Redis (para filas de processamento)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Email (para envio automático de NFe)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=seu@email.com
SMTP_PASSWORD=sua_senha_email

# JWT Authentication
JWT_SECRET=seu_secret_key_muito_seguro_aqui
JWT_EXPIRES_IN=24h

# Servidor
PORT=3000
NODE_ENV=development

# Logs
LOG_LEVEL=info
LOG_DIR=./logs

# Backup automático de XMLs
BACKUP_ENABLED=true
BACKUP_DAYS=365

# Alertas
ALERT_CERT_DAYS=30
ALERT_EMAIL=alertas@empresa.com.br

# Empresa (dados padrão)
EMPRESA_CNPJ=00000000000000
EMPRESA_UF=SP
EMPRESA_CODIGO_MUNICIPIO=3550308
