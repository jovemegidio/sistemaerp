{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ALUFORCE",
  "version": "2.5.0",
  "identifier": "br.com.aluforce.desktop",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "ALUFORCE - Sistema de Gestão Empresarial",
        "label": "main",
        "width": 1400,
        "height": 900,
        "minWidth": 1024,
        "minHeight": 768,
        "center": true,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false,
        "alwaysOnTop": false,
        "skipTaskbar": false,
        "focus": true,
        "visible": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: blob:; connect-src 'self' ipc: http://ipc.localhost"
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis", "msi"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": ["resources/*"],
    "externalBin": [],
    "copyright": "© 2025 ALUFORCE. Todos os direitos reservados.",
    "category": "Business",
    "shortDescription": "Sistema de Gestão Empresarial",
    "longDescription": "ALUFORCE é um sistema completo de gestão empresarial que integra Vendas, Compras, Financeiro, PCP, RH e NFe em uma única plataforma.",
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "http://timestamp.digicert.com",
      "wix": null,
      "nsis": {
        "installMode": "currentUser",
        "languages": ["PortugueseBR"],
        "displayLanguageSelector": false
      }
    },
    "publisher": "ALUFORCE"
  },
  "plugins": {}
}
